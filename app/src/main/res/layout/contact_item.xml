<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/settings_fields"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/contact_user_pic"
        android:layout_width="@dimen/settings_profile_image_width"
        android:layout_height="@dimen/settings_profile_image_width"
        android:src="@drawable/ic_user_96"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contact_fullname"
        style="@style/text_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/contact_user_pic"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Alex Developerovich" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text_small"
        tools:text="online"
        app:layout_constraintStart_toEndOf="@id/contact_user_pic"
        app:layout_constraintTop_toBottomOf="@id/contact_fullname" />

</androidx.constraintlayout.widget.ConstraintLayout>